<%= link_to room do %>
<div class="msg <%= room.id == params[:id].to_i && params[:controller] == 'rooms' ? 'active' : '' %>">
<div class="msg-profile group">
 <svg viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1">
  <path d="M12 2l10 6.5v7L12 22 2 15.5v-7L12 2zM12 22v-6.5" />
  <path d="M22 8.5l-10 7-10-7" />
  <path d="M2 15.5l10-7 10 7M12 2v6.5" /></svg>
</div>
<div class="msg-detail">
 <div class="msg-username"><%= room.name.truncate(20) %></div>
 <div class="msg-content">
  <% if room.messages.last %>
  <span class="msg-message"><%= room.messages.last.content.truncate(20)  %></span>
  <span class="msg-date"><%= room.messages.last.created_at.strftime('%H:%M')  %></span>

  <% end %>
 </div>
</div>
</div>
<% end %>